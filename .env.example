# eBay API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# eBay Developer App Credentials
EBAY_CLIENT_ID=your_ebay_app_id_here
EBAY_CLIENT_SECRET=your_ebay_cert_id_here

# OAuth Redirect URI (must match your eBay app configuration)
EBAY_REDIRECT_URI=http://localhost:5085/ebay/callback

# Environment: SANDBOX or PRODUCTION
EBAY_ENVIRONMENT=SANDBOX

# Refresh Token (obtained after first OAuth flow)
# Leave empty initially, then update after authenticating
EBAY_REFRESH_TOKEN=
