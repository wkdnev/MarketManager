@page "/"
@using MarketManager.Services
@inject EbayAuthService AuthService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Dashboard - MarketManager</PageTitle>

<div class="dashboard-container">
    <h1>Welcome to MarketManager</h1>
    <p class="lead">Your complete eBay marketplace management solution</p>

    <div class="row mt-4">
        <!-- Connection Status Card -->
        <div class="col-md-12 mb-4">
            <div class="card connection-card">
                <div class="card-body">
                    @if (AuthService.IsAuthenticated())
                    {
                        <div class="d-flex align-items-center">
                            <div class="status-icon connected me-3">✓</div>
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">Connected to eBay</h5>
                                <p class="card-text text-muted mb-0">Your application is authenticated and ready to use</p>
                            </div>
                            <button class="btn btn-outline-secondary" @onclick="GoToSettings">Settings</button>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="status-icon disconnected me-3">⚠</div>
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">Not Connected</h5>
                                <p class="card-text text-muted mb-0">Connect to eBay to start managing your marketplace</p>
                            </div>
                            <button class="btn btn-primary" @onclick="GoToSettings">Connect Now</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (AuthService.IsAuthenticated())
    {
        <!-- Quick Actions -->
        <div class="row mt-4">
            <div class="col-12">
                <h3>Quick Actions</h3>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4 mb-3">
                <div class="card action-card" @onclick="@(() => NavigateTo("/buying/search"))">
                    <div class="card-body text-center">
                        <div class="action-icon">🔍</div>
                        <h5 class="card-title">Search Deals</h5>
                        <p class="card-text">Find great deals on eBay marketplace</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card action-card" @onclick="@(() => NavigateTo("/selling/create-listing"))">
                    <div class="card-body text-center">
                        <div class="action-icon">➕</div>
                        <h5 class="card-title">Create Listing</h5>
                        <p class="card-text">List a new item for sale</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card action-card" @onclick="@(() => NavigateTo("/selling/active-listings"))">
                    <div class="card-body text-center">
                        <div class="action-icon">📋</div>
                        <h5 class="card-title">Active Listings</h5>
                        <p class="card-text">Manage your current listings</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card action-card" @onclick="@(() => NavigateTo("/selling/orders"))">
                    <div class="card-body text-center">
                        <div class="action-icon">📮</div>
                        <h5 class="card-title">Orders</h5>
                        <p class="card-text">View and fulfill orders</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card action-card" @onclick="@(() => NavigateTo("/selling/inventory"))">
                    <div class="card-body text-center">
                        <div class="action-icon">📊</div>
                        <h5 class="card-title">Inventory</h5>
                        <p class="card-text">Manage your inventory</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card action-card" @onclick="@(() => NavigateTo("/analytics/sales"))">
                    <div class="card-body text-center">
                        <div class="action-icon">📈</div>
                        <h5 class="card-title">Analytics</h5>
                        <p class="card-text">View sales analytics</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Setup Instructions -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Getting Started</h5>
                        <ol>
                            <li>Configure your eBay API credentials in <code>appsettings.json</code></li>
                            <li>Click "Connect Now" to authenticate with eBay</li>
                            <li>Grant permissions when redirected to eBay</li>
                            <li>Start managing your eBay marketplace!</li>
                        </ol>
                        <p class="mt-3">
                            <a href="https://developer.ebay.com" target="_blank" class="btn btn-link">Get eBay Developer Credentials →</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .dashboard-container {
        padding: 2rem;
    }

    .connection-card {
        border-left: 4px solid #28a745;
    }

    .connection-card.disconnected {
        border-left-color: #ffc107;
    }

    .status-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .status-icon.connected {
        background-color: #d4edda;
        color: #155724;
    }

    .status-icon.disconnected {
        background-color: #fff3cd;
        color: #856404;
    }

    .action-card {
        cursor: pointer;
        transition: all 0.3s ease;
        border: 1px solid #dee2e6;
    }

    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        border-color: #007bff;
    }

    .action-icon {
        font-size: 48px;
        margin-bottom: 1rem;
    }

    code {
        background-color: #f8f9fa;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        color: #e83e8c;
    }
</style>

@code {
    private void GoToSettings()
    {
        NavigationManager.NavigateTo("/ebay/settings");
    }

    private void NavigateTo(string url)
    {
        NavigationManager.NavigateTo(url);
    }
}

